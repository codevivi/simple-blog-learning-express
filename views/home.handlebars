<h1>HOME PAGE</h1>

<div class="row">
  {{#each posts}}
    <div class="col-6 col-md-4 col-lg-3 mb-3">
      <a class="text-decoration-none text-dark" href="/post/{{@index}}">
        <div class="card w-100" style="min-height:300px">
          <img class="card-img-top" src="{{img}}" width="200" height="150" alt="{{title}}" />
          <div class="card-body">
            <h2 class="card-title text-decoration-none text-dark">{{title}}</h2>
            <h6 class="card-subtitle mb-2 text-muted">{{date}}</h6>
            <p class="card-text text-secondary">{{description}}</p>
          </div>
        </div>
      </a>
    </div>

  {{/each}}

</div>